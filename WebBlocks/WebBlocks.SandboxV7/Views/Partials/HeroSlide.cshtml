@inherits WebBlocks.ViewTemplates.WebBlocksViewPage

@{
    CurrentBlockContext.CssClasses.Add("hero-slide");

    var mediaItem = Umbraco.TypedMedia(CurrentBlock.GetPropertyValue<int>("image"));
    var imageUrl = mediaItem != null ? mediaItem.Url : "";

    var imageResized = imageUrl + "?width=375&height=150&mode=crop";

    <img alt="Slide" src="@imageResized" />
}
